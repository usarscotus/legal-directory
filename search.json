---
layout: none
---

[
  {% assign last = site.pages.size %}
  {% assign index = 0 %}
  {% for doc in site.html_pages %}
    {% unless doc.layout == "page" or doc.search_exclude == true %}
      {
        "title": {{ doc.title | jsonify }},
        "url": "{{ site.baseurl }}{{ doc.url }}",
        "content": {{ doc.content | strip_html | normalize_whitespace | jsonify }},
        "breadcrumb_parent": {{ doc.breadcrumb_parent | default: "" | jsonify }}
      }{% assign index = index | plus: 1 %}{% if index < last %},{% endif %}
    {% endunless %}
  {% endfor %}
]
